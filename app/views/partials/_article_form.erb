<% form @next, { method: :post, action: next_path }, wrapper: :div do |f| %>
  <%# Plain HTML because I couldn't get Forme to render radio buttons. %>

  <%# Category scores %>
  <fieldset class="form-group margin-top">
    <legend>Your category scores:</legend>
    <table>
      <tbody>
      <% category_scores.each do |category, score| %>
          <tr>
            <td><%= category %></td>
            <td>
              <input
                value="<%= score %>"
                type="number",
                name="category_score_<%= category %>"
                id="category_score_<%= category %>"
              >
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </fieldset>

  <%# Article type %>
  <fieldset class="form-group margin-top">
    <legend>Article type:</legend>

    <label class="paper-radio margin-right" style="display:inline-block" for="article_type_any">
      <input
        type="radio"
        value="any"
        <%= 'checked="checked"' if article_type == :any %>
        name="article_type"
        id="article_type_any"
      >
      <span>Any (fast)</span>
    </label>

    <label class="paper-radio margin-right" style="display:inline-block" for="article_type_good">
      <input
        type="radio"
        value="good"
        <%= 'checked="checked"' if article_type == :good %>
        name="article_type"
        id="article_type_good"
      >
      <span>Good</span>
    </label>

    <label class="paper-radio" style="display:inline-block" for="article_type_featured">
      <input
        type="radio"
        value="featured"
        <%= 'checked="checked"' if article_type == :featured %>
        name="article_type"
        id="article_type_featured"
      >
      <span>Featured</span>
    </label>
  </fieldset>

  <%# Reaction %>
  <fieldset class="form-group margin-top">
    <legend>Did you like this article?</legend>

    <label class="paper-radio margin-right-large" style="display:inline-block" for="reaction_like">
      <input
        type="radio"
        value="like"
        name="reaction"
        id="reaction_like"
      >
      <span>üëç</span>
    </label>

    <label class="paper-radio" style="display:inline-block" for="reaction_dislike">
      <input
        type="radio"
        value="dislike"
         name="reaction"
         id="reaction_dislike">
      <span>üëé</span>
    </label>
  </fieldset>

  <%# Next article (submit) %>
  <input type="submit" name="commit" value="Next article" class="paper-btn margin-bottom-large">
<% end %>
